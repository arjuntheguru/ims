@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@if (!CompanyState.Value.IsLoading && CompanyState.Value.CurrentCompany is not null)
{
    <MudGrid>
        <MudItem md="8" sm=12>
            <MudText Typo="Typo.h6" Class="mt-2">@CompanyState.Value.CurrentCompany.Name</MudText>
        </MudItem>
        <MudItem md="4" Class="d-flex justify-end">
            <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Inherit" OnClick="() => OpenDialog(CompanyState.Value.CurrentCompany)" />
            <MudIconButton Icon="@Icons.Material.Outlined.Settings" Color="Color.Inherit" />
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-2" />
    <MudGrid>
        <MudItem md="7">
            <MudText Typo="Typo.body2">@CompanyState.Value.CurrentCompany.Address.AddressLine1, @CompanyState.Value.CurrentCompany.Address.AddressLine2</MudText>
            <MudText Typo="Typo.body2">@CompanyState.Value.CurrentCompany.Address.City</MudText>
            <MudText Typo="Typo.body2">@CompanyState.Value.CurrentCompany.Address.State, @CompanyState.Value.CurrentCompany.Address.ZIP</MudText>
            <MudText Typo="Typo.body2">@CompanyState.Value.CurrentCompany.Address.Country</MudText>
        </MudItem>
        <MudItem md="5">
            <MudText Typo="Typo.body2"><b>Warehouses : </b>@CompanyState.Value.CurrentCompany.Setting.WarehouseCount</MudText>
            <MudText Typo="Typo.body2"><b>Start Date : </b>@CompanyState.Value.CurrentCompany.Setting.SubscriptionStartDate.Value.ToString("D")</MudText>
            <MudText Typo="Typo.body2"><b>End Date : </b>@CompanyState.Value.CurrentCompany.Setting.SubscriptionEndDate.Value.ToString("D")</MudText>
        </MudItem>
    </MudGrid>
    <MudDivider Class="my-2" />
}