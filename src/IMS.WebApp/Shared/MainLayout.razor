@inherits Fluxor.Blazor.Web.Components.FluxorLayout

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Class="blue-grey lighten-4">       
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" />
    </MudAppBar>
    <MudDrawer Open=true Variant="@DrawerVariant.Persistent" Elevation="1" Class="grey darken-4 shades-text text-white">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">IMS</MudText>
        </MudDrawerHeader>
        <MudNavMenu Color="Color.Tertiary">
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink> 
            <MudNavLink Href="/company" Match="NavLinkMatch.All">Company</MudNavLink> 
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="my-3">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>